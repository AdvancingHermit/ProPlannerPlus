<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>


<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

   <children>

      <Label text="Login" />
      <Label text="Initials:"
             GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <TextField fx:id="initialsField"
              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      <Label fx:id="errorText" text=""
             GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: red"/>
      <Button fx:id="loginButton" text="Login"  onAction="#switchToHome"
              GridPane.columnIndex="1" GridPane.rowIndex="3"/>
      <Button fx:id="addEmployeeButton" text="Add Employee"  onAction="#switchToAddEmployee"
              GridPane.columnIndex="1" GridPane.rowIndex="3"/>

   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
